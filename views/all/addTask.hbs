<h1 class="task">Add new Story</h1>

<br>

{{#if errors}}

{{#each errors}}

<h3 class="err-msg">{{this.msg}}</h3>

{{/each}}

{{/if}}


<form action="/tasks" method="post">

    <div id="log">

        <p>
            <input type="text" placeholder="Title" name="title" id="title">
        </p>

        <p>
            <textarea name="description" id="description" placeholder="Description" rows="8"></textarea>
        </p>

        <div class="row my-3 mx-auto">
            <div class="input-field">
                {{!-- The select "name" property should match the property in the database --}}
                <select name="privacy" id="privacy">
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                </select>
            </div>
        </div>

        <p>
            <input type="submit" value="Save Story" id="log-button">
        </p>

        <p>
            <a href="/dashboard" class="cancel-btn">Return to Dashboard</a>
        </p>


    </div>

</form>